<h1>Listing journals</h1>

<table>
  <thead>
    <tr>
      <th>Child</th>
      <th>Day</th>
      <th>Subject</th>
      <th>Memo</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journals.each do |journal| %>
      <tr>
        <td><%= journal.child_id %></td>
        <td><%= journal.day %></td>
        <td><%= journal.subject %></td>
        <td><%= journal.memo %></td>
        <td><%= journal.date %></td>
        <td><%= link_to 'Show', journal %></td>
        <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
        <td><%= link_to 'Destroy', journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Journal', new_journal_path %>
